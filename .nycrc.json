{
  "extends": "@istanbuljs/nyc-config-typescript",
  "all": true,
  "reporter": ["lcov", "html", "text-summary"],
  "report-dir": "./coverage",
  "include": ["src/lib/**/*.ts", "src/test/**/*.spec.ts"],
  "exclude": ["src/custom-typings/*.*", "src/example/*.*"],
  "recursive": "true",
  "require": ["ts-node/register", "source-map-support/register"],
  "sourceMap": true
}
